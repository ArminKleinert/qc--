target byteorder little;

section "text" 
{
    TryAMove ()
    {
        bits32 s, t;
        span EXN, ex1 {
            t = getMove(player) 
                also returns to c1
                also returns to c2;
            makeMove(t)
                also returns to c1
                also returns to c2;
            t = bits32[players];
            next = (next + 1) % t;
        }

        continuation c1 ():
            goto h1;

        continuation c2 ():
            goto h2;

        finish:
        movesTried = movesTried -1 ;
        return ;
                
        h1:
        t = bits32[bits32[player+12]];
        t(s);
        goto finish;

        h2:
        t = bits32[bits32[player+12]];
        t(lit1);
        goto finish;
        
    }
}

section "data" 
{
    lit1:   
        bits8[] "not enugh tiles left\000";
    ex1:
        align 4;
        bits32 {2};
        bits32 {Exn_illegalMove};
        bits32 {0};
        bits32 {Exn_NoMoreTiles};
        bits32 {-1};

}
