And finally, our lookup function; parameter [[preserved]] takes the list
of registers preserved accross calls, i.e. non-volatile or callee-saved
registers.
<<x86call.ml>>=
let cconv ~return_to cut ccname stage =
  let f =
    match ccname with
    | "C--"         -> conv ~jump:true  ~altret:true  ~preserved:nvregs
    | "lightweight" -> conv ~jump:true  ~altret:true  ~preserved:nvregs
    | "notail"      -> conv ~jump:false ~altret:true  ~preserved:nvregs
    | "paranoid C"  -> conv ~jump:false ~altret:false ~preserved:RS.empty
    | "C"           -> conv ~jump:false ~altret:false ~preserved:nvregs
    | "gc"          -> conv ~jump:false ~altret:false 
                            ~preserved:(RS.of_list [ecx;edx;ebx;esi;edi;ebp])
    | _ -> Unsupported.calling_convention ccname
  in f ccname stage ~return_to cut
@
