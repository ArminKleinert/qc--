
% ------------------------------------------------------------------ 
\section{Functions for Debugging RTLs}
% ------------------------------------------------------------------ 

<<rtldebug.mli>>=
val rtl_to_string: Rtl.rtl -> string
@

% ------------------------------------------------------------------ 
\subsection{Implementation}
% ------------------------------------------------------------------ 

<<rtldebug.ml>>=
let rtl_to_string rtl =
    let stmt = Rtl2ast.rtl (fun x -> x) rtl in
    let pp   = Astpp.stmt stmt              in
        Pp.ppToString 80 pp
@

