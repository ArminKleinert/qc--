    local fd  = (not out or out == "-") and Driver.stdout or open_out(out)
    local ast = Driver.parse(file)
    
    local asm = backend.asm(fd) 
    local env = Driver.check(ast,asm) -- asm is stored in env
    local opt = { apply  = Compile.run_optimizer
