We import the assembly code that restores the registers and cuts to the unwind entry
point.
<<public function implementations>>=
extern void (*__cmm_unwindcont)();
Cmm_Cont* Cmm_MakeUnwindCont(Cmm_Activation *a, Cmm_Word index, ...) {
  int i;
  struct conts *conts;
  struct contblock *block;
  va_list ap;

  pc_map_entry* entry = a->rtdatax;
  assert(entry);
  conts = continuations(entry);

  if(index >= conts->num_entries) {
    fprintf(stderr, "Cmm_MakeUnwindCont called with out-of-bounds index %d\n", index);
    assert(0);
  }

  block = (struct contblock *) ((Cmm_Word *) conts + conts->entries[index]);
  va_start(ap, index);
  for (i = 0; i < block->num_vars; i++) {
    <<assign [[block->vars[i]]] from [[ap]]>>
    Cmm_LocalVarWritten(a, block->vars[i].localnum);
  }
  va_end(ap);

  /* We initialize unknown registers to a bogus (but clearly live) address:
     that of the activation. Otherwise, they would dereference 0. */
  for(i = 0; i < NUM_REGS; i++) {
    if(a->regs[i] == NULL) {
      a->regs[i] = (Cmm_Word *)a;
    }
  }

  /* Users are not allowed to reuse space in the activation, so we can set the PC
     and ESP to the continuation's entry point and stack pointer. */
  a->regs[PC]  = (Cmm_Word *) block->pc;
  a->u.unwind.sp = (Cmm_Word *) ((int) a->vfp + Cmm_as_offset(block->sp));
  a->regs[ESP] = (Cmm_Word *)&a->u.unwind.sp;

  a->u.unwind.k.pc = (Cmm_Codeptr) &__cmm_unwindcont;
  a->u.unwind.k.sp = (Cmm_Word *) a->regs;

  return(&a->u.unwind.k);
}
